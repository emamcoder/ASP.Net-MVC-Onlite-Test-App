@model WebTesting.Models.Question
@{
    ViewBag.Title = "DeleteQuestion";
}

<h2>DeleteQuestion</h2>

 <h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Test</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Model.QuestionText
        </dt>

      

    </dl>

    <br /><br />

    <div class="row">
        <form action="/Administration/DeleteQuestion" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="QuestionId" value="@Model.QuestionId" />
           
            <input type="hidden" name="QuestionText" value="@Model.QuestionText" />
            <input type="hidden" name="Answer1" value="@Model.Answer1" />
            <input type="hidden" name="Answer1" value="@Model.Answer2" />
            <input type="hidden" name="Answer1" value="@Model.Answer3" />
            <input type="hidden" name="CorrectAnswer" value="@Model.CorrectAnswer" />
            <input type="hidden" name="QuestionNumber" value="@Model.QuestionNumber" />
            <a href="/Administration/Index">Back to list</a>
            <button id="btnDelete" type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
</div>